# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: Build and deploy Node.js app to Azure Web App - nj-wedding

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read #This is required for actions/checkout

    steps:
      - uses: actions/checkout@v4

      - name: Set up Node.js version
        uses: actions/setup-node@v4
        with:
          node-version: 'latest'

      - name: Copy files, install and build, finally zip
        run: |
          mkdir -p deploy
          cp -r .next/ deploy/
          cp -r lib/ deploy/
          cp -r pages/ deploy/
          cp -r public/ deploy/
          cp -r types/ deploy/
          cp -r styles/ deploy/
          cp next-env.d.ts deploy/
          cp next.config.js deploy/
          cp package.json deploy/
          cp tsconfig.json deploy/
          cd deploy
          npm install
          npm run build
          rm -rf .next/cache
          zip -r ../release.zip .

      - name: Show deploy directory and contents
        run: |
          pwd
          ls -la deploy

      - name: Show size of zipped artifact
        run: du -h release.zip

      - name: Upload artifact for deployment job
        uses: actions/upload-artifact@v4
        with:
          name: node-app
          path: release.zip

  deploy:
    runs-on: ubuntu-latest
    needs: build
    
    permissions:
      id-token: write #This is required for requesting the JWT
      contents: read #This is required for actions/checkout

    steps:
      - name: Download artifact from build job
        uses: actions/download-artifact@v4
        with:
          name: node-app

      - name: Unzip artifact for deployment
        run: unzip release.zip
      
      - name: Login to Azure
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZUREAPPSERVICE_CLIENTID_A97852ACE30B4F9DA8CE13D68BDD36B4 }}
          tenant-id: ${{ secrets.AZUREAPPSERVICE_TENANTID_9A7AC9FA5DF6415E90F54F59C7871BE9 }}
          subscription-id: ${{ secrets.AZUREAPPSERVICE_SUBSCRIPTIONID_12197DDD506F46368A32FC58D23BA3D8 }}

      - name: 'Deploy to Azure Web App'
        id: deploy-to-webapp
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'nj-wedding'
          slot-name: 'Production'
          package: .
          